@using Sitecore.Data.Items
@using Sitecore.Links
@model List<Sitecore.Data.Items.Item>

<!--
    
Need a separate table for each group
Each group needs a header
Each group needs Title / Section column labels
Style table to be full width?  

-->

<table class="index-data table-striped">
    @foreach (Item itm in Model)
    {
        <tr>
            <td class="item"><a href="@LinkManager.GetItemUrl(itm)">@itm.DisplayName</a></td>
            <td class="section"><a href="@LinkManager.GetItemUrl(itm.Parent)">@itm.Parent.DisplayName</a></td>
        </tr>
    }
</table>